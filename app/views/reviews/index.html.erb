<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Video</th>
      <th>Pic</th>
      <th>Rating</th>
      <th>Pros</th>
      <th>Cons</th>
      <th>Summary</th>
      <th>Description</th>
      <th>Os</th>
      <th>Camera</th>
      <th>Storage</th>
      <th>Display</th>
      <th>Resolution</th>
      <th>Battery</th>
      <th>Ram</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.url %></td>
        <td><%= review.video %></td>
        <td><%= review.pic %></td>
        <td><%= review.rating %></td>
        <td><%= review.pros %></td>
        <td><%= review.cons %></td>
        <td><%= review.summary %></td>
        <td><%= review.description %></td>
        <td><%= review.os %></td>
        <td><%= review.camera %></td>
        <td><%= review.storage %></td>
        <td><%= review.display %></td>
        <td><%= review.resolution %></td>
        <td><%= review.battery %></td>
        <td><%= review.ram %></td>
        <td><%= review.weight %></td>
        <td><%= link_to 'Show', review %></td>
        <% if @admin %>
          <td><%= link_to 'Edit', edit_review_path(review) %></td>
          <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @admin %>
  <%= link_to 'New Review', new_review_path %>
<% end %>